<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/ppp"
        android:layout_width="72dp"
        android:layout_height="43dp"
        android:tint="#B3DA0F"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/addd"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/pon"
        app:layout_constraintTop_toTopOf="@+id/pon"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/ic_baseline_person_24" />

    <ImageView
        android:id="@+id/ppp2"
        android:layout_width="54dp"
        android:layout_height="37dp"
        android:layout_below="@+id/ppp"
        android:layout_alignParentStart="true"
        android:layout_marginStart="8dp"
        android:layout_marginTop="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/addd"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/pon"
        app:layout_constraintTop_toTopOf="@+id/pon"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/starr" />

    <TextView
        android:id="@+id/starr"
        android:layout_width="210dp"
        android:layout_height="20dp"
        android:layout_below="@+id/nameeee"
        android:layout_alignBottom="@+id/ppp2"
        android:layout_marginStart="2dp"
        android:layout_marginTop="25dp"
        android:layout_marginBottom="6dp"
        android:layout_toEndOf="@+id/ppp"
        android:text="TextView" />

    <TextView
        android:id="@+id/nameeee"
        android:layout_width="211dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="10dp"
        android:layout_toEndOf="@+id/ppp"
        android:text="TextView" />

    <LinearLayout
        android:layout_width="311dp"
        android:layout_height="4dp"
        android:layout_below="@+id/ppp2"
        android:layout_marginTop="2dp"
        android:orientation="vertical"></LinearLayout>
</RelativeLayout>